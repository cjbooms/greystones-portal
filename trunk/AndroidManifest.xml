<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="masters.android.greystones"
          android:versionCode="4"
          android:versionName="1.0.4">
    <uses-sdk android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon" android:label="Greystones Portal" android:theme="@android:style/Theme">
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".HomePage"  android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".WeatherForecast"/>
        <activity android:name=".WeatherTabs"/>
        <activity android:name=".RestaurantDetails"/>
        <activity android:name=".RestaurantMap">
           <intent-filter>
              <category android:name="android.intent.category.EMBED"></category>
              <action android:name="android.intent.action.MAIN"></action>
           </intent-filter>
        </activity>
        <activity android:name=".PromotionalVideo"/>
        <activity android:name=".CustomizedTabbedView"/>
        <activity android:name=".Browser"/>
    </application>
</manifest>
